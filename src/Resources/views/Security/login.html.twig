{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="login-box-body">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <p class="login-box-msg">Inicie sesi칩n con un usuario local o con SIR</p>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Usuario" id="username" name="_username" value="{{ last_username }}" required="required" />
                <span class="fa fa-user form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Contrase침a" id="password" name="_password" required="required" />
                <span class="fa fa-lock form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"> Recordar
                        </label>
                    </div>
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <input type="submit" class="btn btn-primary btn-block btn-flat" id="_submit" name="_submit"/>
                </div><!-- /.col -->
            </div>
        </form>

        <div class="social-auth-links text-center">
            <p>- O -</p>
            <a href="{{ path('backend_saml_login_check') }}" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-sign-in"></i> Iniciar sesi칩n con SIR</a>
        </div>

        <a href="{{ path("fos_user_resetting_request") }}">He olvidado mi contrase침a</a><br>
{% endblock %}